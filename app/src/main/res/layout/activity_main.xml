<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimaryDark">

<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/gridLayout"
    android:layout_marginTop="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:rowCount="3"
   android:columnCount="3"
    android:background="@color/colorPrimary"
    >

    <ImageView
        android:id="@+id/img1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="0"
        />

    <ImageView
        android:id="@+id/img2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="1"
        />

    <ImageView
        android:id="@+id/img3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="2"
        />

    <ImageView
        android:id="@+id/img4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="3"
         />

    <ImageView
        android:id="@+id/img5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="4"
         />

    <ImageView
        android:id="@+id/img6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="5"
        />

    <ImageView
        android:id="@+id/img7"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="6"
         />

    <ImageView
        android:id="@+id/img8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="7"
         />

    <ImageView
        android:id="@+id/img9"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"
        android:background="#000"
        android:onClick="imageViewIsTapped"
        android:alpha="0.2"
        android:tag="8"
      />
</GridLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="@string/lion_or_tiger"
        android:textSize="30sp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"


        />
    <Button
       android:background="#FF0000"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:layout_marginTop="24dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:id="@+id/btnReset" android:text="Reset the Game" app:layout_constraintTop_toBottomOf="@+id/gridLayout" android:visibility="gone" android:textColor="#fff"
        />
   

</android.support.constraint.ConstraintLayout>